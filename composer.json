{
	"name": "shredio/key-locked-storage",
	"type": "library",
	"license": "MIT",
	"require": {
		"php": ">=8.3",
		"doctrine/orm": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"Shredio\\KeyLockedStorage\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse",
		"test": "vendor/bin/phpunit tests",
		"test:sqlite": "DB_DRIVER=pdo_sqlite vendor/bin/phpunit tests",
		"test:mysql": "vendor/bin/phpunit tests",
		"mysql:start": "docker-compose up -d mysql",
		"mysql:stop": "docker-compose down"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.3",
		"symfony/clock": "^7.3"
	}
}
